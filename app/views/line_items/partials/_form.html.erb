
<%= form_for(line_item, url: line_item_path, remote: true, method: :put) do |f| %>
  <%= f.hidden_field :lock_version %>

  <div class="row">
    <div class="input-field col s6">
      <%= f.number_field :adjustments, step: :any %>
    </div>

    <div class="input-field col s2">
      <%= button_tag type: "submit", class: "transparent_icon light-green-text text-accent-4" do %>
        <i class="material-icons">check</i>
      <% end %>
    </div>

    <div class="input-field col s2">
      <%= link_to line_item_path(line_item.id), class: "transparent_icon red-text text-accent-4", remote: true do %>
        <i class="material-icons">close</i>
      <% end %>
    </div>
  </div>
<% end %>
