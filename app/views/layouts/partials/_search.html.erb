<div class="card blue lighten-5">
  <div class="card-content">
    <%= form_for(:search, url: search_path, method: :get) do |f| %>
      <div class="row">
        <div class="input-field col s8">
          <%= f.label :search %>
          <%= f.text_field :search_text %>
        </div>

        <div class="input-field col s2">
          <%= f.select :per, [25, 50, 100, 200, 400, 800, 'All'], {} %>
          <%= f.label :per %>
        </div>

        <div class="input-field col s2">
          <%= button_tag type: "submit", class: "light-green-text text-accent-4" do %>
            <i class="material-icons">search</i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
