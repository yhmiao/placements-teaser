<div class="card">
  <div class="card-content">
    <%= form_tag(search_path, method: :get) do %>
      <div class="row">
        <div class="input-field col s8">
          <%= label_tag :search %>
          <%= text_field_tag :search_text, params[:search_text] %>
        </div>

        <div class="input-field col s2">
          <%= select_tag :per, raw("<option>25</option><option>50</option><option>100</option><option>200</option>") %>
          <%= label_tag :per %>
        </div>

        <div class="input-field col s2">
          <%= button_tag type: "submit", class: "btn-floating" do %>
            <i class="material-icons">search</i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
